                android:layout_width="match_parent"
                android:id="@+id/rl"
                android:layoutDirection="rtl"
                android:layout_height="54dp">

            <RelativeLayout android:layout_width="70dp"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/rl_serach_history"
                            android:layout_height="match_parent">
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_marginStart="28dp"
                        android:id="@+id/img_search_history"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_search_black"/>
            </RelativeLayout>


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:id="@+id/txtFrom"
                    android:textColor="#fff"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="از :"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/value_selector_bg_yellow"
                    android:textColor="#fff"
                    android:id="@+id/edtDateFrom_history"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/txtFrom"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTo"
                    android:textColor="#fff"
                    android:text="تا :"
                 android:layout_centerHorizontal="true"
                    android:layout_alignBaseline="@+id/edtDateFrom_history"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="14sp"
                    android:text=""
                    android:textColor="#fff"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="3dp"
                    android:background="@drawable/value_selector_bg_yellow"
                    android:id="@+id/edtDateTo_history"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/txtTo"
                    android:layout_marginRight="3dp"/>

        </RelativeLayout>
