<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        tools:context=".activities.register.RegisterActivity">

    <View
            android:id="@+id/vHeader"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorPrimary"/>

    <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/vHeader"
            android:scaleType="fitXY"
            android:src="@drawable/bg_splash_invert"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-3dp"/>

    <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_icon"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivIcon"
            android:layout_marginTop="-3dp"
            android:text="@string/app_name_persian"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignStart="@+id/ivIcon"
            android:layout_marginStart="-4dp"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ivBackground"
            android:background="#fff"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-1dp"
            android:layout_marginStart="0dp">


        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/llInfo"
                android:orientation="vertical"
                android:layout_alignParentStart="true">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="20dp"
                              android:layout_marginStart="3dp"
                              android:layout_height="20dp">
                    <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/ivWarningNameRegister"
                            android:src="@drawable/ic_warning"
                            android:layout_alignParentLeft="true"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="نام"
                            android:textColor="@color/colorsecondarytext"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_layout"
                    android:drawableEnd="@drawable/ic_person_black"
                    android:layout_gravity="center"
                    android:hint="@string/firstName"
                    android:inputType="text"
                    android:padding="10dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorTextDark"
                    android:textColorHint="@color/colorText"
                    android:textDirection="rtl"
                    android:textSize="14sp"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="7dp"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="20dp"
                              android:layout_marginStart="3dp"
                              android:layout_height="20dp">
                    <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/ivWarningFamilyRegister"
                            android:src="@drawable/ic_warning"
                            android:layout_alignParentLeft="true"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="نام خانوادگی"
                            android:textColor="@color/colorsecondarytext"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>


            <EditText
                    android:id="@+id/etLastName"

                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_layout"
                    android:drawableEnd="@drawable/ic_person_black"
                    android:layout_gravity="center"
                    android:hint="@string/lastName"
                    android:inputType="text"
                    android:padding="10dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorTextDark"
                    android:textColorHint="@color/colorText"
                    android:textDirection="rtl"
                    android:textSize="14sp"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="7dp"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="20dp"
                              android:layout_marginStart="3dp"
                              android:layout_height="20dp">
                    <ImageView
                            android:layout_width="match_parent"
                            android:id="@+id/ivWarningMobilePhoneRegister"
                            android:src="@drawable/ic_warning"
                            android:layout_alignParentLeft="true"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"/>
                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="موبایل"
                            android:textColor="@color/colorsecondarytext"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"/>
                </LinearLayout>


            </LinearLayout>
            <TextView
                    android:id="@+id/txtMobileNumber"

                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_layout"
                    android:drawableEnd="@drawable/ic_phone_android_black"
                    android:layout_gravity="center"
                    android:hint="@string/mobileNumber"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorTextDark"
                    android:textColorHint="@color/colorText"
                    android:textDirection="ltr"
                    android:textSize="14sp"/>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="جنسیت"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/colorsecondarytext"
                    android:textSize="15sp"
                    android:layout_marginStart="25dp"
                    android:textStyle="bold"/>

            <RelativeLayout
                    android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_input_layout2"
                    android:padding="3dp"
                    android:layoutDirection="rtl">

                <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioGroupRegister"
                        android:orientation="horizontal"
                        android:gravity=""
                        android:theme="@style/RadioButton"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="3dp">
                    <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="مرد"
                            android:textColor="#000"
                            android:checked="true"
                            android:id="@+id/rbManRegister"
                            android:textSize="15dp"/>
                    <RadioButton
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="زن"
                            android:textColor="#000"
                            android:id="@+id/rbWomanRegister"
                            android:textSize="15dp"/>

                </RadioGroup>

            </RelativeLayout>


            <RelativeLayout
                    android:id="@+id/rlButtons"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_above="@+id/txtRayan"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">
                <Button
                        android:id="@+id/btRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_button"
                        android:drawablePadding="-24dp"
                        android:foreground="?selectableItemBackground"
                        android:text="ثبت"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                <ProgressBar
                        android:id="@+id/pbRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:indeterminateTint="#fff"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_button"
                        android:drawablePadding="-24dp"/>
            </RelativeLayout>

            <!--<TextView-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="bottom"-->
                    <!--android:id="@+id/txtRayan"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_marginBottom="10dp"-->
                    <!--android:text="@string/brand"-->
                    <!--android:textColor="@color/colorText"-->
                    <!--android:textStyle="bold"/>-->

        </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
