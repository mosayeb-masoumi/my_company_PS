<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorBackground"
        android:layoutDirection="rtl">


    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbarSignature">

        <TextView
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="17sp"
                android:text="امضاء مسافر"
        />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="2dp"
            android:layout_below="@+id/toolbarSignature"
            android:id="@+id/cvSignature">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:id="@+id/ivSignature"
                           android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_account3"
                            android:layout_gravity="center"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtDriverName"
                            android:layout_toLeftOf="@+id/ivSignature"
                            android:textSize="17sp"
                            android:textColor="#000"
                            android:layout_gravity="center"
                            android:text="علی رضایی"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="2dp"/>


                </RelativeLayout>


                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مبدا :"
                            android:id="@+id/text1"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtOrigin"
                            android:textColor="#000"
                            android:text="ترمینال شماره 4 فرودگاه مهرآباد"
                            android:layout_toLeftOf="@+id/text1"
                            android:layout_marginStart="5dp"
                            android:textSize="13sp"/>
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_marginTop="3dp"
                                android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="مقصد :"
                            android:id="@+id/text2"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="10dp"
                            android:textSize="13sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtDestination"
                            android:text="ترمینال شماره 4 فرودگاه مهرآباد"
                            android:layout_toLeftOf="@+id/text2"
                            android:layout_marginStart="5dp"
                            android:textColor="#000"
                            android:textSize="13sp"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="3dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/cvSignature">

        <RelativeLayout
                android:id="@+id/rlDrawing"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/cvSignature"
                android:layout_marginBottom="5dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp">

            <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="11dp"
                    app:srcCompat="@drawable/ic_replay"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/rateSignature"/>
    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/rlButtons"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/btnSignature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_button"
                android:drawablePadding="-24dp"
                android:foreground="?selectableItemBackground"
                android:padding="11dp"
                android:text="ثبت"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"/>

        <ProgressBar
                android:id="@+id/pbSiggnature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:indeterminateTint="#fff"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_button"
                android:drawablePadding="-24dp"/>
    </RelativeLayout>
</LinearLayout>

